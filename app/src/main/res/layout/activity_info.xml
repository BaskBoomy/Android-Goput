<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/mainivory"
        android:orientation="vertical"
        tools:context=".InfoAcitivity">


    <androidx.appcompat.widget.Toolbar
            android:id="@+id/info_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar">

        <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/leftarrow" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <!--            <ImageView-->
            <!--                    android:id="@+id/imageView2"-->
            <!--                    android:layout_width="70dp"-->
            <!--                    android:layout_height="35dp"-->
            <!--                    android:src="@drawable/goput" />-->
            <ImageView
                    android:id="@+id/goPutLogo"
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/goput"
                    android:visibility="gone" />

            <TextView
                    android:id="@+id/currentClubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumsquare_acb"
                    android:gravity="center"
                    android:text="현재클럽이름"
                    android:textColor="@color/maingreen"
                    android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp">

            <ImageButton
                    android:id="@+id/notificationBtn"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:background="@drawable/ic_notification" />
            <!--            <include-->
            <!--                    layout="@layout/notification"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content" />-->
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:id="@+id/progressLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

        <ProgressBar
                android:id="@+id/login_progress"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

        <TextView
                android:id="@+id/tvLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:text="풋살하러가자!!\n잠시만 기다려주세요^^"
                android:textColor="@color/maingreen"
                android:textStyle="bold" />
    </LinearLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/info_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

        <FrameLayout
