                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp">

                    <org.customcalendar.CustomCalendar
                            android:id="@+id/custom_calendar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/nanumsquare_acl"
                            android:gravity="center"
                            android:text="날짜를 클릭하여 매치정보를 확인하세요."
                            android:textColor="@color/black"
                            android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="90dp">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/joinClubFloatBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:text="클럽참가"
                        android:textColor="@color/white"
                        android:visibility="invisible"
                        app:backgroundTint="@color/maingreen"
                        app:icon="@drawable/join"
                        app:iconTint="@color/white" />

                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/makeMatchFloatBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/nanumsquare_acb"
                        android:text="매치생성"
                        android:textColor="@color/white"
                        android:visibility="invisible"
                        app:backgroundTint="@color/maingreen"
                        app:icon="@drawable/makematch"
                        app:iconTint="@color/white" />
            </LinearLayout>

        </FrameLayout>

        <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottomAppBar"
                style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:fabAnimationMode="slide"
                app:menu="@menu/bottom_app_bar"
                app:navigationIcon="@drawable/baseline_menu_black_24dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addmatchfloatingbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@color/maingreen"
                app:layout_anchor="@+id/bottomAppBar"
                app:layout_anchorGravity="top|center"
                app:srcCompat="@drawable/add"
                app:tint="@color/white" />

        <include layout="@layout/bottomnavigationcontent" />
