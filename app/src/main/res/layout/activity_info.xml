                                            android:text="오늘 매치 없음"
                                            android:textColor="@color/white"
                                            android:textSize="15sp"
                                            android:visibility="gone"/>
                                <TableLayout
                                        android:id="@+id/matchExist"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                    <TableRow
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center|left"
                                                android:fontFamily="@font/nanumsquare_acr"
                                                android:gravity="left"
                                                android:text="날짜"
                                                android:textColor="@color/mainivory"
                                                android:textSize="15sp" />

                                        <TextView
                                                android:id="@+id/todayMatchDate"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center|left"
                                                android:layout_marginLeft="18dp"
                                                android:fontFamily="@font/nanumsquare_acl"
                                                android:gravity="center"
                                                android:text="미정"
                                                android:textColor="@color/mainivory"
                                                android:textSize="14sp" />

                                    </TableRow>

                                    <TableRow
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="13dp">

                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center|left"
                                                android:fontFamily="@font/nanumsquare_acr"
                                                android:gravity="left"
                                                android:text="장소"
                                                android:textColor="@color/mainivory"
                                                android:textSize="15sp" />

                                        <TextView
                                                android:id="@+id/todayMatchPlace"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center|left"
                                                android:layout_marginLeft="18dp"
                                                android:fontFamily="@font/nanumsquare_acl"
                                                android:gravity="center"
                                                android:text="서경풋살장"
                                                android:textColor="@color/mainivory"
                                                android:textSize="14sp" />

                                    </TableRow>

                                    <TableRow
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="13dp">

                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="top|left"
                                                android:fontFamily="@font/nanumsquare_acr"
                                                android:text="주소"
                                                android:textColor="@color/mainivory"
                                                android:textSize="15sp" />

                                        <TextView
                                                android:id="@+id/todayMatchAddress"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="top|left"
                                                android:layout_marginLeft="18dp"
                                                android:fontFamily="@font/nanumsquare_acl"
                                                android:maxLines="60"
                                                android:scrollHorizontally="false"
                                                android:singleLine="false"
                                                android:text="서울 성북구 서경로 124 은주2과 1층"
                                                android:textColor="@color/mainivory"
                                                android:textSize="14sp" />

                                    </TableRow>
                                </TableLayout>
                            </LinearLayout>
                    </LinearLayout>

